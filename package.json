{
  "name": "@0y0/gitbook-cli",
  "version": "1.0.0",
  "description": "A Gitbook CLI",
  "main": "bin/gitbook.js",
  "bin": {
    "gitbook": "./bin/gitbook.js"
  },
  "repository": "https://github.com/o0y0o/gitbook-cli",
  "author": "Jason Chung <shiningjason1989@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gitbook",
    "book",
    "document",
    "cli",
    "terminal"
  ],
  "scripts": {
    "format": "prettier --write bin/**/*.js",
    "lint": "eslint bin/**/*.js",
    "pkg": "[ $(yarn info $npm_package_name version) != $npm_package_version ] && yarn publish || echo Skip publishing due to v$npm_package_version exist"
  },
  "dependencies": {
    "gitbook": "^3.2.3",
    "graceful-fs": "^4.2.6",
    "module-alias": "^2.2.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@0y0/eslint-config-vanilla": "^1.2.2",
    "eslint": "^7.22.0",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": [
      "@0y0/vanilla"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
